@model HondenRescue.ViewModels.HondDetailsViewModel;
@{
    ViewData["Title"] = @Model.Naam;
}

<h1 class="mt-5">@ViewData["Title"]</h1>

<table class="table table-bordered table-striped">
    <tr>
        <td>@Html.DisplayNameFor(model => this.Model.Naam)</td>
        <td>@this.Model.Naam</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => this.Model.Geboortedatum)</td>
        <td>@Model.Geboortedatum</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => this.Model.Geslacht)</td>
        <td>@Model.Geslacht</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => this.Model.Opmerkingen)</td>
        <td>@(Model.Opmerkingen == null || Model.Opmerkingen == "" ? "Er zijn geen opmerkingen" : @Model.Opmerkingen)  </td>
    </tr>
    <tr>
        <td> <img src="~/img/@(Model.HondId).jpg" style="max-width: 200px; max-height: 200px;" /></td>
        <td><a class="button" asp-action="" asp-route-id="@Model.HondId">Gered hondje adopteren</a></td>
    </tr>
</table>
