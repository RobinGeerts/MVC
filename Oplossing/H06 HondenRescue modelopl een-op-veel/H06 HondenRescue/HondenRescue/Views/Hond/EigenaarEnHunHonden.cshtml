@model HondenRescue.ViewModels.EigenaarEnHunHondenViewModel;
@{
    ViewData["Title"] = "";
}
<table class="table">
    <thead class="thead-light">
        <tr class="bg-info">
            <th class="col-2">
                @Html.DisplayNameFor(k => k.EigenaarMetHunHonden[0].VolledigeNaam)
            </th>
            <th class="col-4">
                @Html.DisplayNameFor(k => k.EigenaarMetHunHonden[0].Honden)
            </th>
        </tr>
    </thead>
    @foreach (var item in Model.EigenaarMetHunHonden)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VolledigeNaam) 
            </td>
            <td>
                @foreach(var hond in item.Honden)
                {
                    @Html.DisplayFor(modelItem => hond.Naam)  @Html.Raw("-")  @Html.DisplayFor(modelItem => hond.Geslacht)
                    <br />
                }
            </td>
        </tr>
    }
</table>