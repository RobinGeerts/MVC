@model HondenRescue.ViewModels.HondCreateViewModel;
@{
    ViewData["Title"] = @Model.Naam;
}
<h1>Creëer nieuwe hond</h1>

<h4>@Model.Naam</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Geboortedatum" class="control-label"></label>
                <input asp-for="Geboortedatum" id="Geboortedatum" class="form-control" />
                <span asp-validation-for="Geboortedatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gechipt" class="control-label"></label>
                <input asp-for="Gechipt" />
                <span asp-validation-for="Gechipt" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="SelectedGeslacht" class="control-label"></label>
                    <select asp-for="SelectedGeslacht" class="form-control">
                        <option value="">-- Selecteer een optie --</option>
                        @if (Model.Geslacht != null)
                        {
                            @foreach (var item in Model.Geslacht)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="SelectedGeslacht" class="SelectedGeslacht"></span>
            </div>
            <div class="form-group">
                <label asp-for="EigenaarId" class="control-label"></label>
                <select asp-for="EigenaarId" asp-items="Model.Eigenaren"></select>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label">Upload een foto:</label>
                <input type="file" class="form-control-file" asp-for="Foto">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>
