@using Owledge.ViewModels

@model PersoonsgegevensViewModel

<div class="row">
    <div class="col-md-4">
        <h1 class="display-4  mt-3">Persoonsgegevens</h1>
        <form asp-controller="Inschrijving" asp-action="Persoonsgegevens" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group  mt-2">
                <label asp-for="Voornaam" class="control-label"></label>
                <input asp-for="Voornaam" class="form-control" />
                <span asp-validation-for="Voornaam" class="text-danger" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Familienaam" class="control-label"></label>
                <input asp-for="Familienaam" class="form-control">
                <span asp-validation-for="Familienaam" class="text-danger" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Roepnaam" class="control-label"></label>
                <input asp-for="Roepnaam" class="form-control">
                <span asp-validation-for="Roepnaam" class="text-danger" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Geboortedatum" class="control-label"></label>
                <input asp-for="Geboortedatum" class="form-control">
                <span asp-validation-for="Geboortedatum" class="text-danger" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Telefoonnummer" class="control-label"></label>
                <input asp-for="Telefoonnummer" class="form-control">
                <span asp-validation-for="Telefoonnummer" class="text-danger" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Ga verder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}