@using Owledge.ViewModels

@model ContactgegevensViewModel

<div class="row">
    <div class="col-md-4">
        <h1 class="display-4  mt-3">Contactgegevens</h1>
        <form asp-controller="Inschrijving" asp-action="Contactgegevens" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Straat" class="control-label"></label>
                <input asp-for="Straat" class="form-control">
                <span asp-validation-for="Straat" class="text-danger" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Huisnummer" class="control-label"></label>
                <input asp-for="Huisnummer" class="form-control">
                <span asp-validation-for="Huisnummer" class="text-danger" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Postcode" class="control-label"></label>
                <input asp-for="Postcode" class="form-control">
                <span asp-validation-for="Postcode" class="text-danger" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Gemeente" class="control-label"></label>
                <input asp-for="Gemeente" class="form-control">
                <span asp-validation-for="Gemeente" class="text-danger" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Ga verder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}